<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_bg_other"
    tools:context=".ui.activity.PWDSettingActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/back_size"
        android:layout_height="@dimen/back_size"
        android:padding="25px"
        tools:ignore="PxUsage"
        android:src="@drawable/ic_chevron_left_black_24dp" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81px"
        android:layout_marginTop="258px"
        android:text="@string/str_set_pwd"
        android:textColor="#333333"
        android:textSize="61px"
        android:textStyle="bold"
        tools:ignore="PxUsage" />

    <TextView
        android:id="@+id/etPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81px"
        android:layout_marginTop="369px"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_small_size"
        android:text="@string/str_hint_two"
        android:textColor="#333333"
        tools:ignore="PxUsage" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:layout_marginTop="573px"
        android:layout_marginStart="88px"
        android:layout_marginEnd="@dimen/mar_size"
        android:background="@null"
        android:hint="@string/str_pwd"
        android:textColorHint="#999999"
        android:inputType="textPassword"
        android:maxLength="16"
        android:textSize="46px"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:layout_toStartOf="@+id/imgEye"
        android:textCursorDrawable="@drawable/cursor_size_black"
        tools:ignore="PxUsage" />

    <ImageView
        android:id="@+id/imgEye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="573px"
        android:layout_marginEnd="15dp"
        android:padding="66px"
        android:src="@mipmap/ic_eye_open"
        tools:ignore="PxUsage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/etPass"
        android:layout_marginStart="@dimen/mar_size"
        android:layout_marginEnd="@dimen/mar_size"
        android:background="@color/line_bg" />
    <EditText
        android:id="@+id/etPassTwo"
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:layout_below="@+id/etPass"
        android:layout_marginStart="88px"
        android:layout_marginEnd="88px"
        android:hint="@string/str_long15"
        android:inputType="textPassword"
        android:maxLength="16"
        android:textColorHint="#999999"
        android:selectAllOnFocus="true"
        android:background="@null"
        android:textSize="46px"
        android:textCursorDrawable="@drawable/cursor_size_black"
        android:textColor="@color/black"
        tools:ignore="PxUsage" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/etPassTwo"
        android:layout_marginStart="@dimen/mar_size"
        android:layout_marginEnd="@dimen/mar_size"
        android:background="#D6D7DC" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="131px"
        android:layout_marginStart="@dimen/mar_size"
        android:layout_marginEnd="@dimen/mar_size"
        android:layout_marginTop="968px"
        android:background="@drawable/login_click_effect_in"
        android:text="@string/str_login"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal_size"
        tools:ignore="PxUsage" />

