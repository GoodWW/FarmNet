<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="PxUsage">
    <TextView
        android:id="@+id/tvLineTop"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="10px"
        android:layout_marginEnd="10px"
        android:background="@color/line_bg" />

    <TextView
        android:layout_below="@+id/tvLineTop"
        android:layout_marginStart="@dimen/mar_size"
        android:id="@+id/tvTitle"
        android:layout_marginTop="20px"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:gravity="center_vertical"
        android:text="切花温室"
        android:textSize="@dimen/text_small_size" />

    <TextView
        android:layout_marginStart="@dimen/mar_size"
        android:id="@+id/tvState"
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:layout_below="@+id/tvTitle"
        android:gravity="center_vertical"
        android:text="气象站电量不足"
        android:textColor="@color/red_normal"
        android:layout_marginBottom="20px"
        android:textSize="@dimen/text_s_small_size" />

    <TextView
        android:id="@+id/tvLine"
        android:layout_width="1px"
        android:layout_height="60px"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="@dimen/mar_size"
        android:layout_toEndOf="@+id/tvState"
        android:background="@color/line_black" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="@dimen/mar_size"
        android:layout_toEndOf="@+id/tvLine"
        android:gravity="center_vertical"
        android:text="未处理"
        android:textColor="@color/new_redbg"
        android:textSize="@dimen/text_s_small_size" />

    <ImageView
        android:id="@+id/imgDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_img_down"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/mar_size"
        />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019.9.12    18:50"
        android:textSize="@dimen/text_s_small_size"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="120px"
        />
</RelativeLayout>