<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_and_button"
        android:layout_marginBottom="@dimen/padding_top_and_button"
        android:background="?selectableItemBackground"
        android:paddingStart="@dimen/mar_size"
        tools:ignore="PxUsage,RtlSymmetry">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="展开时间"
            android:textColor="@color/txt_my"
            android:textSize="@dimen/text_normal_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="75px"
            android:gravity="center_vertical"
            android:text="50 S"
            android:textColor="@color/txt_my"
            android:textSize="@dimen/text_normal_size" />

        <ImageView
            android:layout_width="15px"
            android:layout_height="25px"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/mar_size"
            android:background="@drawable/list_arrow_right" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_and_button"
        android:layout_marginBottom="@dimen/padding_top_and_button"
        android:background="?selectableItemBackground"
        android:paddingStart="@dimen/mar_size"
        tools:ignore="PxUsage,RtlSymmetry">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="收拢时间"
            android:textColor="@color/txt_my"
            android:textSize="@dimen/text_normal_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="75px"
            android:gravity="center_vertical"
            android:text="55 S"
            android:textColor="@color/txt_my"
            android:textSize="@dimen/text_normal_size" />

        <ImageView
            android:layout_width="15px"
            android:layout_height="25px"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/mar_size"
            android:background="@drawable/list_arrow_right" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_and_button"
        android:layout_marginBottom="@dimen/padding_top_and_button"
        android:background="?selectableItemBackground"
        android:paddingStart="@dimen/mar_size"
        tools:ignore="PxUsage,RtlSymmetry">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="最大调整度"
            android:textColor="@color/txt_my"
            android:textSize="@dimen/text_normal_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="75px"
            android:gravity="center_vertical"
            android:text="10 %"
            android:textColor="@color/txt_my"
            android:textSize="@dimen/text_normal_size" />

        <ImageView
            android:layout_width="15px"
            android:layout_height="25px"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/mar_size"
            android:background="@drawable/list_arrow_right" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_and_button"
        android:layout_marginBottom="@dimen/padding_top_and_button"
        android:background="?selectableItemBackground"
        android:paddingStart="@dimen/mar_size"
        tools:ignore="PxUsage,RtlSymmetry">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="最小调整度"
            android:textColor="@color/txt_my"
            android:textSize="@dimen/text_normal_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="75px"
            android:gravity="center_vertical"
            android:text="5 %"
            android:textColor="@color/txt_my"
            android:textSize="@dimen/text_normal_size" />

        <ImageView
            android:layout_width="15px"
            android:layout_height="25px"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/mar_size"
            android:background="@drawable/list_arrow_right" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top_and_button"
        android:layout_marginBottom="@dimen/padding_top_and_button"
        android:background="?selectableItemBackground"
        android:paddingStart="@dimen/mar_size"
        tools:ignore="PxUsage,RtlSymmetry">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="光照抗干扰时间"
            android:textColor="@color/txt_my"
            android:textSize="@dimen/text_normal_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="75px"
            android:gravity="center_vertical"
            android:text="50 S"
            android:textColor="@color/txt_my"
            android:textSize="@dimen/text_normal_size" />

        <ImageView
            android:layout_width="15px"
            android:layout_height="25px"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/mar_size"
            android:background="@drawable/list_arrow_right" />
    </RelativeLayout>
</LinearLayout>