<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PWDLoginActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0px" />

    <ImageView
        android:id="@+id/back"
        android:layout_height="@dimen/back_size"
        android:layout_width="@dimen/back_size"
        android:src="@drawable/ic_chevron_left_black_24dp"
        android:padding="25px"
        tools:ignore="PxUsage" />

    <TextView
        android:id="@+id/tvAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back"
        android:layout_marginStart="@dimen/mar_size"
        android:layout_marginTop="60px"
        android:text="@string/str_add_farm"
        android:textColor="@color/black"
        android:textSize="@dimen/text_large_size"
        android:textStyle="bold"
        tools:ignore="PxUsage" />
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:layout_below="@+id/tvAdd"
        android:layout_marginStart="@dimen/mar_size"
        android:layout_marginTop="200px"
        android:background="@null"
        android:text="农场名称："
        android:gravity="center_vertical"
        android:textSize="@dimen/text_small_size"
        android:maxLength="18"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor_size_black"
        tools:ignore="PxUsage" />

    <EditText
        android:id="@+id/etFarmName"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_toEndOf="@+id/tvName"
        android:layout_below="@+id/tvAdd"
        android:layout_marginTop="200px"
        android:layout_marginEnd="@dimen/mar_size"
        android:background="@null"
        android:textSize="@dimen/text_small_size"
        android:hint="@string/str_farm_name"
        android:maxLength="18"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/cursor_size_black"
        tools:ignore="PxUsage" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/etFarmName"
        android:layout_marginStart="@dimen/mar_size"
        android:layout_marginEnd="@dimen/mar_size"
        android:background="@color/line_bg" />
    <TextView
        android:id="@+id/tvSiteOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="130px"
        android:layout_below="@+id/etFarmName"
        android:layout_marginStart="@dimen/mar_size"
        android:maxLength="16"
        android:text="农场地址："
        android:selectAllOnFocus="true"
        android:gravity="center_vertical"
        android:background="@null"
        android:textSize="@dimen/text_small_size"
        android:layout_alignTop="@+id/tvSite"
        android:layout_alignBottom="@+id/tvSite"
        android:textCursorDrawable="@drawable/cursor_size_black"
        android:textColor="@color/black"
        tools:ignore="PxUsage" />

    <TextView
        android:id="@+id/tvSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="130px"
        android:layout_below="@+id/etFarmName"
        android:hint="@string/str_farm_site"
        android:layout_toEndOf="@+id/tvSiteOne"
        android:layout_toStartOf="@+id/imgSite"
        android:selectAllOnFocus="true"
        android:gravity="center_vertical"
        android:background="@null"
        android:textSize="@dimen/text_small_size"
        android:textCursorDrawable="@drawable/cursor_size_black"
        android:textColor="@color/black"
        tools:ignore="PxUsage" />
    <ImageView
        android:id="@+id/imgSite"
        android:layout_width="130px"
        android:layout_height="wrap_content"
        android:minHeight="130px"
        android:layout_alignTop="@+id/tvSite"
        android:layout_alignBottom="@+id/tvSite"
        android:scaleType="centerInside"
        android:layout_below="@+id/etFarmName"
        android:layout_marginEnd="@dimen/mar_size"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_add_fame_location"
        tools:ignore="PxUsage" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tvSite"
        android:layout_marginStart="@dimen/mar_size"
        android:layout_marginEnd="@dimen/mar_size"
        android:background="@color/line_bg" />
