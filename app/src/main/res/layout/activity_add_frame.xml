    <TextView
        android:id="@+id/etRemarkOne"
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:layout_below="@+id/tvSite"
        android:layout_marginStart="@dimen/mar_size"
        android:text="农场备注："
        android:maxLength="16"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_small_size"
        android:selectAllOnFocus="true"
        android:background="@null"
        android:textCursorDrawable="@drawable/cursor_size_black"
        android:textColor="@color/black"
        tools:ignore="PxUsage" />

    <EditText
        android:id="@+id/etRemark"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_below="@+id/tvSite"
        android:layout_toEndOf="@+id/etRemarkOne"
        android:layout_marginEnd="@dimen/mar_size"
        android:hint="@string/str_remark"
        android:maxLength="16"
        android:textSize="@dimen/text_small_size"
        android:selectAllOnFocus="true"
        android:background="@null"
        android:textCursorDrawable="@drawable/cursor_size_black"
        android:textColor="@color/black"
        tools:ignore="PxUsage" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/etRemark"
        android:layout_marginStart="@dimen/mar_size"
        android:layout_marginEnd="@dimen/mar_size"
        android:background="@color/line_bg" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="match_parent"
        android:layout_height="109px"
        android:layout_below="@id/etRemark"
        android:layout_marginStart="@dimen/mar_size"
        android:layout_marginTop="@dimen/margin_top_size_btn"
        android:layout_marginEnd="@dimen/mar_size"
        android:background="@drawable/login_click_effect_in"
        android:text="@string/str_ok"
        android:textColor="@color/white"
        android:textSize="@dimen/text_normal_size"
        tools:ignore="PxUsage" />

</RelativeLayout>